<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed" >

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_background" >

        <TextView
            android:id="@+id/forget_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_fh" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout0"
        android:layout_width="300dp"
        android:layout_height="39dp"
        android:layout_below="@+id/titlebar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32.5dp"
        android:background="@drawable/input_theme1" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.125dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_yh" />

        <EditText
            android:id="@+id/username"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.125dp"
            android:layout_weight="1"
            android:background="@drawable/input_theme1"
            android:ems="10"
            android:hint="请输入用户名"
            android:inputType="text"
            android:textSize="14.625sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="300dp"
        android:layout_height="39dp"
        android:layout_below="@+id/linearLayout0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40.1dp"
        android:background="@drawable/input_theme1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.125dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_mm" />

        <EditText
            android:id="@+id/password"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.125dp"
            android:layout_weight="1"
            android:background="@drawable/input_theme1"
            android:ems="10"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="0dp"
            android:textSize="14.625sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="40.1dp"
        android:background="@drawable/input_theme1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.125dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_mm" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.125dp"
            android:layout_weight="1"
            android:background="@drawable/input_theme1"
            android:ems="10"
            android:hint="请设置新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="0dp"
            android:textSize="14.625sp" />

        <ImageView
            android:id="@+id/tick_cross1"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.125dp"
            android:layout_marginRight="8.125dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2_5"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.5625dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.125dp"
            android:textColor="#999999"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2_5"
        android:layout_marginTop="10.5625dp"
        android:background="@drawable/input_theme1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.125dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_mm" />

        <EditText
            android:id="@+id/new_password_re"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.125dp"
            android:layout_weight="1"
            android:background="@drawable/input_theme1"
            android:ems="10"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="0dp"
            android:textSize="14.625sp" />

        <ImageView
            android:id="@+id/tick_cross2"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.125dp"
            android:layout_marginRight="8.125dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="40.625dp"
        android:background="@drawable/btn_theme1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="确认修改"
        android:textColor="#fff"
        android:textSize="16sp" />

</RelativeLayout>