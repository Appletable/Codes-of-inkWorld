<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_slidingmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/imagebar"
        android:layout_width="fill_parent"
        android:layout_height="118dp"
        android:background="#f5f5f5" >

        <LinearLayout
            android:id="@+id/clicktologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" >

            <ImageView
                android:id="@+id/user_tx"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="点击登录"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/optionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagebar"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/sy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_sy"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="首页"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wdsc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_wdsc"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="我的收藏"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wdcy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_wdcy"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="我的参与"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ss"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_ss"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="搜索"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sz"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector" >

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_sz"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="设置"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>