<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"><shape>
            <stroke android:width="1dp" android:color="#e9e9e9" />

            <gradient android:endColor="#0fff" android:startColor="#0fff" />

            <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />

            <corners android:radius="10dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <stroke android:width="1dp" android:color="#e9e9e9" />

            <gradient android:endColor="#fff5f5f5" android:startColor="#fff5f5f5" />

            <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />

            <corners android:radius="10dp" />
        </shape></item>

</selector>